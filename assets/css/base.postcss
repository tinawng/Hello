html {
  -ms-text-size-adjust: 100%;
  -webkit-text-size-adjust: 100%;
  -moz-osx-font-smoothing: grayscale;
  -webkit-font-smoothing: antialiased;

  font-family: "spacemono-regular";
  font-size: 18px;
  @apply text-steel-900;
  
  box-sizing: border-box;

  background: #ECE9E6;
  background: -webkit-linear-gradient(to left, #FFFFFF, #ECE9E6);
  background: linear-gradient(to left, #FFFFFF, #ECE9E6);
}

h1 {
  @apply text-4xl;
  font-family: "montserrat-regular";
  letter-spacing: 0.5rem
}
h2 {
  @apply text-3xl;
  font-family: "spacemono-regular";
}
h3 {
  @apply text-steel-700;
  font-family: "spacemono-bolditalic";
}
h4 {
  @apply text-sm;
}
h5 {
  @apply text-xs;
  font-family: "montserrat-regular";
}
h6 {
  @apply text-xxxs;
  font-family: "montserrat-italic";
}

p {
  @apply mb-1;
}

a {
  @apply w-max pb-1;
  @apply border-b border-black;
  transition: all 0.2s;
}
a:hover {
  @apply pb-0;
  @apply text-steel-700 border-transparent;
  background: #F2CC89AA;
}

.flex-center-x {
  @apply flex justify-center;
}
.flex-vertical-center-x {
  @apply flex flex-col items-center;
}
.flex-center-y {
  @apply flex items-center;
}
.flex-vertical-center-y {
  @apply flex flex-col justify-center;
}
.flex-center {
  @apply flex-center-x flex-center-y;
}
.flex-vertical-center {
  @apply flex-vertical-center-x flex-vertical-center-y;
}

